<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @order.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>

<p>
	<strong>Items:</strong>
	<% product_ids =[] %>
  <% names =[] %>
  
  <% @order.line_items.each do |item|%>
    <% product_ids.push(item.product_id) %>
  <% end %>
  <% product_ids.each do |id| %>
    <% names.push(Product.find(id).name) %>
  <% end %> 
  <%= names %>
  <% @order.line_items.each do |i| %>
      <%= i.quantity %>
  <% end %>
</p>


