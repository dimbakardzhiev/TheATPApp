<% provide(:title, "Order") %>
<strong>Name:</strong>
  <%= @order.name %>

<p>
  <strong>Address:</strong>
  <%= @order.address %>
</p>

<p>
  <strong>Email:</strong>
  <%= @order.email %>
</p>

<p>
  <strong>Pay type:</strong>
  <%= @order.pay_type %>
</p>

<table class="table">

<thead>
  <tr>
    <strong>Items:</strong>
	</tr>
  
  <% product_ids =[] %>
  <% names =[] %>
  
  <% @order.line_items.each do |item|%>
    <% product_ids.push(item.product_id) %>
  <% end %>
  <% product_ids.each do |id| %>
    <% names.push(Product.find(id).name) %>
  <% end %> 
    <%= names.join(", ") %><br>
  <% @order.line_items.each do |i| %>
      <p> <b> Quantity: </b><%= i.quantity %> </p>
  <% end %>



<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>

</table>