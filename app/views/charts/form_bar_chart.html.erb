<% provide(:title, "Bar Charts") %>
<center>
	<h1>Bar Charts</h1>
	<h2>Ranking points over one season</h2>
	<%= form_tag("/charts/bar_chart", method: "get") do %>
	<div class="col-md-4 col-md-offset-4">
		<%= label_tag(:year, "Select Year:") %>
		<%= select_tag(:bar_chart_year, options_for_select({"2017" => "2017", "2016" => "2016", "2015" => "2015", "2014" => "2014", "2013" => "2013"}), :prompt => "Select year") %>
		<%= submit_tag("Display Chart", class: "btn btn-danger") %>
	<% end %>
	</div>
</center>