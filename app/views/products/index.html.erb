<% provide(:title, 'Products') %>
<h1>Products</h1>
<%= will_paginate %>
<table>
<% @products.each do |product| %>
  <tr class="products_text">

  <td>

    <dl>
      <dt><%= product.name %></dt>
      <dd><%= truncate(strip_tags(product.description),
            length: 400) %></dd>
  </dl>
  <hr />
</td>

  <td>
    <%= link_to 'Full Details', product %><br/>
    <%= link_to 'Edit Product', edit_product_path(product) %><br/>
    <%= link_to 'Delete', product, method: :delete,
                data: { confirm: 'Are you sure?' } %><br><br><br><br>
  </td>
</tr>
<% end %>
</table>

<br />

<%= link_to 'Add New Product', new_product_path, class: "btn btn-danger" %>