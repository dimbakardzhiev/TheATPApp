<h1>Your Pragmatic Catalog</h1>

<% cache @products do %>
	<% @products.each do |product| %>
		<% cache product do %>
			<div class="entry">
				<h3><%= product.name %></h3>
				<%= sanitize(product.description) %>
				<div class="price_line">
					<span class="price"><%= quid(product.price) %></span>
					<%= button_to 'Add to Cart', line_items_path(product_id: product) %>
				</div>
			</div>
		<% end %>
	<% end %>
<% end %>

<%= will_paginate %>